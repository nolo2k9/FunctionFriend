<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FunctionFriend.Locaton" BackgroundColor ="#429de3">
    <ContentPage.Content>

        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="Press the button to find out the longtiude and lattitude of your current location (Please ensure You have enabled Location services for this app in your settings) " 
               x:Name="lblDisplay"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" 
            TextColor="Black"
              />
            <Button Text="Find your current location Stats" x:Name="GetLocationBtn" Clicked="GetLocationBtn_Clicked" BackgroundColor="Gold" TextColor="Black"></Button>
            <Label Text="Longitude and Lattitude" x:Name="longLat" TextColor="Black" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>